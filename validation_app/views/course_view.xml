<odoo>
    <data>
      <!-- explicit list view definition -->
  
      <record model="ir.ui.view" id="validation_app.course_model_list">
        <field name="name">Course List</field>
        <field name="model">validation_app.course_model</field>
        <field name="arch" type="xml">
          <tree> 
            <field name="name"/>
            <field name="description"/>
            <field name="modules"></field>
          </tree>
        </field>
      </record>
  
      <!-- Form definition-->
      <record model="ir.ui.view" id="validation_app.course_model_form">
        <field name="name">Course Form</field>
        <field name="model">validation_app.course_model</field>
        <field name="arch" type="xml">
          <form string="Course">
            <header>
              <!-- Buttons here-->
            </header>
            <group>
              <group name="left">
                <field name="name"/>
                <field name="description"/>
                <field name="modules">
                <tree>
                  <field name="name"/>
                </tree>
                </field>
              </group>
            </group>
          </form>
        </field>
      </record>
  
  
      <!-- actions opening views on models -->
  
      <record model="ir.actions.act_window" id="validation_app.action_window_course">
        <field name="name">Course Window</field>
        <field name="res_model">validation_app.course_model</field>
        <field name="view_mode">tree,form</field>
      </record>
  
